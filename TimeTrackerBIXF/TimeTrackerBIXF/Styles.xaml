<?xml version="1.0" encoding="UTF-8" ?>
<ResourceDictionary
  x:Class="TimeTrackerBIXF.Styles"
      xmlns:local="clr-namespace:TimeTrackerBIXF"
  xmlns="http://xamarin.com/schemas/2014/forms"
  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Style TargetType="Label" x:Key="LabelMFR">
        <Setter Property="FontFamily">
            <Setter.Value>
                <OnPlatform x:TypeArguments="x:String">
                    <On Platform="iOS" Value="MontserratLight" />
                    <On Platform="Android" Value="Montserrat-Light.ttf#MontserratLight" />
                </OnPlatform>
            </Setter.Value>
        </Setter>
    </Style>
    
